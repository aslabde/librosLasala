<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="lasala.Distribuidora" table="DISTRIBUIDORAS" >
        <id name="id" column="ID_DISTRIBUIDORA">
            <generator class="identity" />
        </id>
             <property name="name"   />
             
             <set name="books"  table="LIBROS"  cascade="save-update" inverse="true"  fetch="join" >
                 <key column="ID_DISTRIBUIDORA" />
                 <one-to-many class="lasala.Libro" />
             </set>
        
    </class> 
    
    
    
</hibernate-mapping>
