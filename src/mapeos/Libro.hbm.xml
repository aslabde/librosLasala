<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="lasala.Libro" table="LIBROS">
        <id name="id" column="ID_LIBRO">
            <generator class="identity" />
        </id>
             <property name="titulo"   />
             <property name="autor"  />
             <property name="editorial"  />
             <property name="isbn"  />
             <property name="netoCompra"  />
             <property name="pvp"  />
        
             <many-to-one name="distribuidora" column="ID_DISTRIBUIDORA" />
             
             <list name="histStatus" cascade="all-delete-orphan" >
                 <key column="ID_LIBRO" />
                 <index column="ORDEN" />
                 <one-to-many class="lasala.BookStatus" />
             </list>    
    </class> 
    
    
    
</hibernate-mapping>
